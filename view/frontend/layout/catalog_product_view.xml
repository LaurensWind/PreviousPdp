<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.details">
            <block class="Magento\Catalog\Block\Widget\RecentlyViewed" name="catalog.product.recently.viewed"
                   template="Wind_PreviousPdp::product/view/recently-viewed.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Previous</argument>
                    <argument name="uiComponent" xsi:type="string">widget_recently_viewed</argument>
                    <argument name="page_size" xsi:type="number">5</argument>
                    <argument name="show_attributes" xsi:type="string">name,image,price,sku,learn_more
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
